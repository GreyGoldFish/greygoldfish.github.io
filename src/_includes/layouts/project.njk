{% extends layouts.base %}

{% block content %}
<article class="surface--main container mx-auto px-4 py-8 bg-[var(--color-surface)] border-x-2 border-b-2 border-[var(--color-border)]">
    {% include partials.header %}
    <section class="prose prose-lg max-w-none 
                   prose-headings:text-[var(--color-accent)] 
                   prose-p:text-[var(--color-text)] 
                   prose-a:text-[var(--color-accent)] hover:prose-a:text-[var(--color-accent-hover)]">
        {{ content | safe }}
    </section>
</article>
{% endblock %}
