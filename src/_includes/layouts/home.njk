{% extends layouts.base %}

{% block content %}
<div class="min-h-screen bg-gradient-to-b from-[var(--color-primary)] to-[var(--color-surface)]/20">
    <div class="container mx-auto px-4 py-8">
        {% include partials.hero %}
        
        {% if ctas and ctas.length > 0 %}
        <section class="section-spacing">
            {% include partials.cta %}
        </section>
        {% endif %}
        
        {% if content.trim() %}
        <section class="prose prose-lg max-w-none section-spacing
                       prose-headings:text-[var(--color-accent)] 
                       prose-p:text-[var(--color-text)] 
                       prose-a:text-[var(--color-accent)] hover:prose-a:text-[var(--color-accent-hover)]">
            {{ content | safe }}
        </section>
        {% endif %}
    </div>
</div>
{% endblock %}
