{% extends layouts.base %}

{% block content %}
<article>
    {% include partials.header %}

    <div>
        {{ content | safe }}
    </div>

    {% set olderPost = collections.post | getPreviousCollectionItem %}
    {% set newerPost = collections.post | getNextCollectionItem %}

    {% if olderPost or newerPost %}
    <nav>
        {% if newerPost %}
            <a href="{{ newerPost.url }}" class="btn">← {{ newerPost.data.title }}</a>
        {% else %}
            <span></span>
        {% endif %}

        {% if olderPost %}
            <a href="{{ olderPost.url }}" class="btn">{{ olderPost.data.title }} →</a>
        {% endif %}
    </nav>
    {% endif %}
</article>
{% endblock %}
