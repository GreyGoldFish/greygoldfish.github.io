<!DOCTYPE html>
<html lang="en">
    <head>
        {% include partials.metaInfo %}
    </head>
    <body class="min-h-screen flex flex-col">
        {# Skip to content link (accessibility) #}
        <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-0 focus:left-0 focus:z-50">
            {{ site.skipToContentText }}
        </a>

        {# Site header with navigation #}
        {% include partials.banner %}

        {# Main layout container using CSS Grid for flexible layout #}
        <div class="flex-1 {% if sidebar %}grid grid-cols-1 lg:grid-cols-[1fr_16rem] gap-0{% else %}flex flex-col{% endif %}">
            {# Main content area #}
            <main id="main-content" class="surface__main" tabindex="-1">
                {% block content %}
                    {{ content | safe }}
                {% endblock %}
                {% if not hero %}
                    {% include partials.cta %}
                {% endif %}
            </main>

            {# Sidebar - only shows on larger screens #}
            {% if sidebar %}
                <aside class="surface p-4 lg:block hidden">
                    {% include partials.sidebar %}
                </aside>
            {% endif %}
        </div>

        {# Site footer #}
        <footer class="surface__footer">
            {% include partials.footer %}
        </footer>
    </body>
</html>
