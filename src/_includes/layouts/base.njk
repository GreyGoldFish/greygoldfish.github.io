<!DOCTYPE html>
<html lang="en">
    <head>
        {% include partials.metaInfo %}
    </head>
    <body class="bg-[var(--os-bg)] text-[var(--os-text)] min-h-screen flex flex-col">
        <div class="flex flex-1">
            <div class="flex-1 flex flex-col">
                {% include partials.banner %}

                {% include partials.sidebar %}

                <main tabindex="-1" id="main-content" class="flex-grow p-4">
                    {% block content %}
                    {{ content | safe }}
                    {% endblock %}
                </main>

                {% block cta %}
                    {# Only include extra cta if it exists #}
                    {% if cta and ctas[cta] %}
                        {% set cta = ctas[cta] %}
                        {% include partials.cta %}
                    {% endif %}
                    {% set cta = ctas["default"] %}
                    {% include partials.cta %}
                {% endblock %}

                {% include partials.footer %}
            </div>
        </div>
    </body>
</html>