<div class="tech-stack my-5">
    <p class="text-base mb-3">Built with:</p>
    <ul class="flex justify-center space-x-5">
        {% for tech in technologies %}
        <li>
            <a href="{{ tech.url }}" target="_blank" rel="noopener noreferrer" title="{{ tech.name }}" class="inline-block p-1 border border-transparent hover:border-[var(--os-border)]">
                <img src="{{ tech.iconSrc }}" alt="{{ tech.name }} logo" class="h-7 w-7">
            </a>
        </li>
        {% endfor %}
    </ul>
</div>
