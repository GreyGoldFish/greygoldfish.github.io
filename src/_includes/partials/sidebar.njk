{% if sidebar %}
<aside class="sidebar p-4 bg-[var(--color-window-bg)] border border-[var(--color-border)] w-64 space-y-6">
    {# Recent Posts Section #}
    {% if sidebar.recentPosts and sidebar.recentPosts.contentDisplay %}
    <section class="sidebar-section">
        {% set contentDisplay = sidebar.recentPosts.contentDisplay | merge({ "reverse": true }) %}
        
        {% include partials.contentDisplay %}
    </section>
    {% endif %}
</aside>
{% endif %}
