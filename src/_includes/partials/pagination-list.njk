<div class="pagination-list-container text-[var(--os-text)] py-4">
    <div class="space-y-6">
        {% if headline %}
        <h2 class="text-2xl font-semibold text-center text-[var(--os-title)] mb-6">{{ headline | safe }}</h2>
        {% endif %}
        {% if pagination and pagination.items.length > 0 %}
        <div class="border-2 border-[var(--os-border)] bg-[var(--os-window-bg)]">
            <ol class="divide-y divide-[var(--os-border)]">
                {% for item in pagination.items %}
                <li class="p-4 hover:bg-[var(--os-accent-bg)]/10">
                    {% set itemUrl = item.url | default("#") %}
                    {% set itemTitle = item.data.title | default(item.title) | default("Untitled Item") %}
                    <a href="{{ itemUrl }}" class="block text-xl text-[var(--os-accent-text)] hover:text-[var(--os-accent-hover-text)] font-semibold mb-1 focus:outline-none focus:ring-1 focus:ring-[var(--os-accent-bg)]">
                        {{ itemTitle }}
                    </a>
                    {% set itemDate = item.date %}
                    {% if itemDate %}
                    <p class="text-sm text-[var(--os-text)] mb-2">{{ itemDate | formatDateLong }}</p>
                    {% endif %}
                    {% set itemDescription = item.data.description | default(item.description) %}
                    {% if itemDescription %}
                    <p class="text-base text-[var(--os-text)]/90">{{ itemDescription }}</p>
                    {% endif %}
                </li>
                {% endfor %}
            </ol>
        </div>
        {% else %}
        <p class="text-center text-lg border-2 border-[var(--os-border)] p-6 bg-[var(--os-window-bg)] text-[var(--os-text)]">No items to display.</p>
        {% endif %}
    </div>
</div>