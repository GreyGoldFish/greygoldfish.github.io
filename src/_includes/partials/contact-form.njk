<form action="YOUR_FORMSPREE_ENDPOINT" method="POST" class="space-y-6">
    <div>
        <label for="name" class="block text-sm font-medium text-[var(--os-text)]">Full Name</label>
        <input type="text" name="name" id="name" required class="mt-1 block w-full px-3 py-2 bg-[var(--os-input-bg)] border border-[var(--os-border)] rounded-md shadow-sm focus:outline-none focus:ring-[var(--os-accent)] focus:border-[var(--os-accent)] sm:text-sm text-[var(--os-text)]">
    </div>
    <div>
        <label for="email" class="block text-sm font-medium text-[var(--os-text)]">Email Address</label>
        <input type="email" name="email" id="email" required class="mt-1 block w-full px-3 py-2 bg-[var(--os-input-bg)] border border-[var(--os-border)] rounded-md shadow-sm focus:outline-none focus:ring-[var(--os-accent)] focus:border-[var(--os-accent)] sm:text-sm text-[var(--os-text)]">
    </div>
    <div>
        <label for="message" class="block text-sm font-medium text-[var(--os-text)]">Message</label>
        <textarea id="message" name="message" rows="4" required class="mt-1 block w-full px-3 py-2 bg-[var(--os-input-bg)] border border-[var(--os-border)] rounded-md shadow-sm focus:outline-none focus:ring-[var(--os-accent)] focus:border-[var(--os-accent)] sm:text-sm text-[var(--os-text)]"></textarea>
    </div>
    <div>
        <button type="submit" class="button accent">Send Message</button>
    </div>
</form>
