<form action="{{ siteData.contact.form.endpoint }}" method="POST">
    <input type="hidden" name="_subject" value="New contact from {{ siteData.name }}">
    <input type="hidden" name="_language" value="en">
    <input type="hidden" name="_next" value="{{ siteData.url }}/contact/?success=true">
    
    <div>
        <div>
            <label for="name">
                Full Name <span class="form__required">*</span>
            </label>
            <input type="text" name="name" id="name" required>
        </div>
        
        <div>
            <label for="email">
                Email Address <span class="form__required">*</span>
            </label>
            <input type="email" name="email" id="email" required>
        </div>
    </div>
    
    <div>
        <label for="subject">
            Subject
        </label>
        <input type="text" name="subject" id="subject" 
               placeholder="What is this about?">
    </div>
    
    <div>
        <label for="message">
            Message <span class="form__required">*</span>
        </label>
        <textarea id="message" name="message" rows="6" required 
                  placeholder="Tell me about your project, question, or how I can help..."></textarea>
        <p>Minimum 10 characters</p>
    </div>
    
    <div>
        <p>
            <span class="form__required">*</span> Required fields
        </p>
        <button type="submit">
            Send Message
        </button>
    </div>
</form>

