{% if pageHeader.title or pageHeader.summary or pageHeader.eyebrow %}
<header class="page-header border-b-2 border-[var(--os-border)] p-4">
    <div class="text-center"> {# Removed container mx-auto #}
        {% if pageHeader.eyebrow %}
        <p>{{ pageHeader.eyebrow | safe }}</p>
        {% endif %}
        {% if pageHeader.title %}
        <h1 class="text-3xl font-bold text-[var(--os-accent-text)]">{{ pageHeader.title | safe }}</h1> {# Changed to --os-accent-text #}
        {% endif %}
        {% if pageHeader.summary %}
        <p class="text-lg mt-1">{{ pageHeader.summary | safe }}</p>
        {% endif %}
    </div>
</header>
{% endif %}