{% if hero %}
<section>
    <div>
        <div>
            {% if hero.eyebrow %}
            <div>
                <span>
                    {{ hero.eyebrow | safe }}
                </span>
            </div>
            {% endif %}
              <h1>
                {{ hero.title | default(title) | safe }}
            </h1>
            
            {% if hero.intro %}
            <p>
                {{ hero.intro | safe }}
            </p>
            {% endif %}
        </div>
        
        {% if hero.summary %}
        <div>
            <p>{{ hero.summary | safe }}</p>
        </div>
        {% endif %}
        
        {% if hero.media %}
        <div>
            {{ hero.media | safe }}
        </div>
        {% endif %}
        
        {% if hero.buttonText and hero.buttonLink %}
        <div>
            <a href="{{ hero.buttonLink | url }}">
                {{ hero.buttonText | safe }}
            </a>
        </div>
        {% endif %}
    </div>
</section>
{% endif %}
