{% set headerTitle = header.title | default("") %}
{% set headerSummary = header.summary | default("") %}
{% set headerEyebrow = header.eyebrow | default("") %}

{% if headerTitle or headerSummary or headerEyebrow %}
<header class="page-header border-b-2 border-[var(--os-border)] p-4">
    <div class="text-center">
        {% if headerEyebrow %}
        <p>{{ headerEyebrow | safe }}</p>
        {% endif %}
        {% if headerTitle %}
        <h1 class="text-3xl font-bold text-[var(--os-accent)]">{{ headerTitle | safe }}</h1>
        {% endif %}
        {% if headerSummary %}
        <p class="text-lg mt-1">{{ headerSummary | safe }}</p>
        {% endif %}
    </div>
</header>
{% endif %}
